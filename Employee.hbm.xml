<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping package="com.simplilearn.Employee">
<class name="Employee" table="EMPLOYEE_DETAILS">


<id name="empid" column="EMPLOYEE_ID" type="int">
<generator class="increment"></generator>
</id>

<property name="empname" column="EMPLOYEE_NAME"></property>
<property name="empemail" column="EMPLOYEE_EMAIL" type="string"></property>
<property name="empaddress" column="EMPLOYEE_ADDRESS" ></property>
<property name="empesalary" column="EMPLOYEE_SALARY" type="long"></property>
<property name="empdesignation" column="EMPLOYEE_DESIGNATION" type="string"></property>




</class>
</hibernate-mapping>
